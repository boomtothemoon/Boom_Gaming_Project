

<% content_for :left do %>
    <ol class="breadcrumb">
        <li><a class="btn disabled btn-outline btn-xs btn-default" href=""><%= flash[:breadcrumbDirectory] %></a></li>
    </ol>
<% end %>
<div class="pull-right">





<%= form_tag(platforms_search_path, method: "get") do %>
    <%= collection_select(:x, :platform_id, @platforms.distinct().select(:name), :name, :name) %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

</div>
<table class="table table-striped table-hover table-responsive">
    <thead>
    <tr>
        <th>Platform</th>
    </tr>
    </thead>
    <tbody>
    <% @platforms.distinct().select(:name).each do |search|%>
        <tr>
        <td><%= link_to search.name, controller: "games", action: "search_by_platform", name: search.name%></td>
        </tr>
    <% end %>
    </tbody>
</table>
      <div class="pull-right">
        <%= paginate @platforms %>
        <%= page_entries_info @platforms %>
      <br/>