<h1>Search Result</h1>
<div class="row">
 <div class="col-sm-12">
  <div class="panel panel-default">
    <div class="panel-body">
        <% if  @searches.size <= 0 %>
            <h3><p> No Result Found</p></h3>
        <% else %> 
             <h3><p>Your search for "<%= @keywork_terms%>" return <%= pluralize(@searches.size, 'result')%></p></h3>
            <table class="table table-striped table-hover table-responsive">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Platform</th>
                    <th>Year</th>
                    <th>Genre</th>
                    <th>Publisher</th>
                    <th>Developer</th>
                    <th>Rating</th>
                    <th>
                </tr>
                </thead>
                <tbody>
                <% @searches.each do |search|%>
                    <tr>
                    <td><%= search.name%></td>
                    <td><%= search.platform.name %></td>
                    <td><%= search.year %></td>
                    <td><%= search.genre.name %></td>
                    <td><%= search.publisher %></td>
                    <td><%= search.developer %></td>
                    <td><%= search.rating %></td>
                    <td><button type="button" class="btn btn-outline btn-xs center"><%= link_to 'View Details', search %></button></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        <% end %>
    </div>
</div>
</div>
</div>

