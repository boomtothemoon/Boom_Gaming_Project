<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>BOOM! Gaming</h1>
    </div>
  </div>

<div class="row">
 <div class="col-sm-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <table id="games-table" class="table table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Platform</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Publisher</th>
            <th>Developer</th>
            <th>Rating</th>
            <th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= game.name%></td>
              <td><%= game.platform.name %></td>
              <td><%= game.year %></td>
              <td><%= game.genre.name %></td>
              <td><%= game.publisher %></td>
              <td><%= game.developer %></td>
              <td><%= game.rating %></td>
              <td><%= link_to 'show', games_show_path %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <%= paginate @games %>
  <%= page_entries_info @games %>
    </div>
  </div>
 </div>
</div>




</div>

