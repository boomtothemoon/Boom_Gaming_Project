<div class="row">
  <div class="col-sm-12">
    <h1>Game List</h1>
  </div>
</div>

<div class="row">
 <div class="col-sm-12">
  <div class="panel panel-default">
    <div class="panel-body">
    <div class="pull-right">
    <%= form_tag(games_search_path, method: "get") do %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
    <br/>
    </div>
      <table role='datatable' id="games" class="table table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Platform</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Publisher</th>
            <th>Developer</th>
            <th>Rating</th>
            <th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= game.name%></td>
              <td><%= game.platform.name %></td>
              <td><%= game.year %></td>
              <td><%= game.genre.name %></td>
              <td><%= game.publisher %></td>
              <td><%= game.developer %></td>
              <td><%= game.rating %></td>
              <td><button type="button" class="btn btn-outline btn-xs pull-right"><%= link_to 'View Details', game %></button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pull-right">
        <%= paginate @games %>
        <%= page_entries_info @games %>
      <br/>
    </div>

    </div>
  </div>
 </div>
</div>




</div>

